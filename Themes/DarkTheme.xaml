<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════
         DARK THEME — Tactical navy + cyan
         ═══════════════════════════════════════════════ -->

    <!-- Core backgrounds -->
    <SolidColorBrush x:Key="Bg.Window"          Color="#070C15"/>
    <SolidColorBrush x:Key="Bg.TitleBar"        Color="#090E1A"/>
    <SolidColorBrush x:Key="Bg.Sidebar"         Color="#080D18"/>
    <SolidColorBrush x:Key="Bg.Card"            Color="#0A1220"/>
    <SolidColorBrush x:Key="Bg.CardAlt"         Color="#0B1422"/>
    <SolidColorBrush x:Key="Bg.Surface"         Color="#080E1A"/>
    <SolidColorBrush x:Key="Bg.Input"           Color="#0B1625"/>
    <SolidColorBrush x:Key="Bg.RowEven"         Color="#0A1220"/>
    <SolidColorBrush x:Key="Bg.RowOdd"          Color="#080E1A"/>
    <SolidColorBrush x:Key="Bg.RowHover"        Color="#0F1E35"/>
    <SolidColorBrush x:Key="Bg.RowSelected"     Color="#071828"/>
    <SolidColorBrush x:Key="Bg.NavHover"        Color="#0D1829"/>
    <SolidColorBrush x:Key="Bg.NavActive"       Color="#0D1E35"/>
    <SolidColorBrush x:Key="Bg.TagNew"          Color="#0F2A18"/>
    <SolidColorBrush x:Key="Bg.TagError"        Color="#1A0810"/>
    <SolidColorBrush x:Key="Bg.ThemeToggle"     Color="#0B1625"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="Border.Primary"     Color="#0C1828"/>
    <SolidColorBrush x:Key="Border.Subtle"      Color="#0F1E30"/>
    <SolidColorBrush x:Key="Border.Card"        Color="#0F2035"/>
    <SolidColorBrush x:Key="Border.Error"       Color="#3D1020"/>
    <SolidColorBrush x:Key="Border.GhostBtn"    Color="#1A2D45"/>
    <SolidColorBrush x:Key="Border.DangerBtn"   Color="#3D1020"/>

    <!-- Text -->
    <SolidColorBrush x:Key="Text.Primary"       Color="#E2EAF4"/>
    <SolidColorBrush x:Key="Text.Secondary"     Color="#2A4560"/>
    <SolidColorBrush x:Key="Text.Muted"         Color="#1E3048"/>
    <SolidColorBrush x:Key="Text.Dim"           Color="#142030"/>
    <SolidColorBrush x:Key="Text.Nav"           Color="#3D5878"/>
    <SolidColorBrush x:Key="Text.NavHover"      Color="#8AAEC8"/>
    <SolidColorBrush x:Key="Text.StatusBar"     Color="#3D6080"/>
    <SolidColorBrush x:Key="Text.TableIp"       Color="#00E5FF"/>
    <SolidColorBrush x:Key="Text.TableMac"      Color="#4A6888"/>
    <SolidColorBrush x:Key="Text.TableHost"     Color="#8AAEC8"/>
    <SolidColorBrush x:Key="Text.TableVendor"   Color="#6B8BAE"/>
    <SolidColorBrush x:Key="Text.TableTime"     Color="#2A4560"/>
    <SolidColorBrush x:Key="Text.GhostBtn"      Color="#4A6888"/>
    <SolidColorBrush x:Key="Text.DangerBtn"     Color="#7A2535"/>
    <SolidColorBrush x:Key="Text.Error"         Color="#B04055"/>
    <SolidColorBrush x:Key="Text.EmptyState"    Color="#1A3050"/>
    <SolidColorBrush x:Key="Text.EmptySub"      Color="#0F2035"/>
    <SolidColorBrush x:Key="Text.ThemeIcon"     Color="#3D6080"/>

    <!-- Semantic colors (same in both themes) -->
    <SolidColorBrush x:Key="Color.Accent"       Color="#00E5FF"/>
    <SolidColorBrush x:Key="Color.Success"      Color="#00D68F"/>
    <SolidColorBrush x:Key="Color.Warning"      Color="#F59E0B"/>
    <SolidColorBrush x:Key="Color.Danger"       Color="#FF4C6A"/>
    <SolidColorBrush x:Key="Color.Purple"       Color="#A78BFA"/>
    <SolidColorBrush x:Key="Color.Blue"         Color="#60A5FA"/>
    <SolidColorBrush x:Key="Color.Pink"         Color="#F472B6"/>

    <!-- Empty-state radar strokes -->
    <SolidColorBrush x:Key="Color.RadarRing"    Color="#0F2035"/>

    <!-- Grid line -->
    <SolidColorBrush x:Key="Color.GridLine"     Color="#0A1525"/>

    <!-- Column header background -->
    <SolidColorBrush x:Key="Bg.ColHeader"       Color="#080E1A"/>
    <SolidColorBrush x:Key="Text.ColHeader"     Color="#2A4560"/>

    <!-- Progress bar -->
    <SolidColorBrush x:Key="Bg.ProgressTrack"   Color="#0F1E30"/>

    <!-- Scrollbar thumb -->
    <SolidColorBrush x:Key="Color.ScrollThumb"  Color="#1A2D45"/>

    <!-- Theme toggle icon (shown in toggle button) -->
    <System:String x:Key="ThemeIcon"            xmlns:System="clr-namespace:System;assembly=mscorlib">☀</System:String>
    <System:String x:Key="ThemeLabel"           xmlns:System="clr-namespace:System;assembly=mscorlib">LIGHT MODE</System:String>

</ResourceDictionary>
